{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "module": "UMD",
    "removeComments": true,
    "target": "ES5",
    "types": [],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules/**/*", "src/**/*.test.ts"]
}
